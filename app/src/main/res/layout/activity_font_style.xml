<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="vm" type="com.okitoki.okchat.ui.viewmodel.AuthViewModel"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:divider="?android:attr/dividerHorizontal"
            android:orientation="horizontal"
            android:showDividers="middle"
            tools:context=".ui.SplashActivity"
            android:background="@color/white">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_margin="16dp"
                        android:text="Font Sample"
                        android:textSize="16sp"
                        android:textColor="@color/main_text_primary" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical"
                        android:background="@color/colorPrimaryDark"
                        android:gravity="left">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111111"
                            android:alpha="0.2"/>
                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="system default"
                            android:textSize="16sp"
                            android:textColor="@color/white" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sans-serif"
                            android:fontFamily="sans-serif"
                            android:textSize="16sp"
                            android:textColor="@color/white" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="roboto regular (inapp)"
                            android:fontFamily="@font/style_regular"
                            android:textSize="16sp"
                            android:textColor="@color/white" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="notosanscjkkr_regular (inapp)"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:textSize="16sp"
                            android:textColor="@color/white" />
                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                </LinearLayout>

                <!-- 영어 -->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:gravity="left">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111111"
                            android:alpha="0.2"/>

                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABCDEFGHIGKLMNOPQRSTUIVWXYZ"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABCDEFGHIGKLMNOPQRSTUIVWXYZ"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABCDEFGHIGKLMNOPQRSTUIVWXYZ"
                            android:fontFamily="@font/style_regular"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABCDEFGHIGKLMNOPQRSTUIVWXYZ"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:includeFontPadding="false"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />
                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                </LinearLayout>

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                <!-- 숫자 -->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical"
                        android:gravity="left">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111111"
                            android:alpha="0.2"/>
                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:fontFamily="@font/style_regular"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:fontFamily="@font/notosanscjk_support"
                            android:includeFontPadding="false"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />
                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                </LinearLayout>


                <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />
                <!-- 한글 -->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical"
                        android:gravity="left">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111111"
                            android:alpha="0.2"/>
                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가나다라마바사아자차카타파하"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가나다라마바사아자차카타파하"
                            android:fontFamily="sans-serif"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가나다라마바사아자차카타파하"
                            android:fontFamily="@font/style_regular"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가나다라마바사아자차카타파하"
                            android:fontFamily="@font/notosanscjk_support"
                            android:includeFontPadding="false"
                            android:textSize="20sp"
                            android:textColor="@color/main_text_primary" />

                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                </LinearLayout>


                <!-- roboto weights -->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical"
                        android:gravity="left">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#111111"
                            android:alpha="0.2"/>
                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="roboto weights (inapp)"
                            android:background="@color/colorPrimaryDark"
                            android:fontFamily="@font/notosanscjk_support"
                            android:includeFontPadding="false"
                            android:textSize="15sp"
                            android:textColor="@color/white" />

                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="20dp" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가나다라마바사아자차카타파하(thin)"
                            android:fontFamily="@font/style_thin"
                            android:includeFontPadding="false"
                            android:textSize="22sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가나다라마바사아자차카타파하(light)"
                            android:fontFamily="@font/style_light"
                            android:includeFontPadding="false"
                            android:textSize="22sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가나다라마바사아자차카타파하(regular)"
                            android:fontFamily="@font/style_regular"
                            android:includeFontPadding="false"
                            android:textSize="22sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가나다라마바사아자차카타파하(medium)"
                            android:fontFamily="@font/style_medium"
                            android:includeFontPadding="false"
                            android:textSize="22sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가나다라마바사아자차카타파하(bold)"
                            android:fontFamily="@font/style_bold"
                            android:includeFontPadding="false"
                            android:textSize="22sp"
                            android:textColor="@color/main_text_primary" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가나다라마바사아자차카타파하(black)"
                            android:fontFamily="@font/style_black"
                            android:includeFontPadding="false"
                            android:textSize="22sp"
                            android:textColor="@color/main_text_primary" />

                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                </LinearLayout>

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />


            </LinearLayout>
        </ScrollView>
        <TextView
                android:id="@+id/tvEasterEgg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="49dp"
                android:visibility="gone"
                android:text="Smarthausⓒrasset.co.kr"
                android:textColor="#80000000"
                android:textSize="20sp"/>

    </RelativeLayout>
</layout>